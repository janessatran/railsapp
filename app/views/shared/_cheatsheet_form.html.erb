<%= form_for(@cheatsheet) do |f| %>
  
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <br><br>
    
    <%= f.hidden_field :content, id: :subject_content %>
    <trix-editor input="subject_content"></trix-editor>

    <%= f.label :tag_list, 'Tags (separated by commas)' %><br/>
    <%= f.text_field :tag_list %>

    <%= f.label :visibility, "Make public" %>
    <%= f.check_box :visibility, id: 'visibility-checkbox', class: "custom-control-input" %>

    <%= f.submit "create", class: "btn btn-primary" %>
      
<% end %>